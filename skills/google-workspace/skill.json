{
  "name": "google-workspace",
  "version": "1.0.0",
  "description": "Google Workspace: Gmail (list, read, send, search) and Calendar (list events, create event) via Google APIs",
  "env": ["GOOGLE_CLIENT_ID", "GOOGLE_CLIENT_SECRET", "GOOGLE_REFRESH_TOKEN"],
  "tools": [
    {
      "name": "gmail_list_mail",
      "description": "List recent Gmail messages (inbox). Use for 'show my email', 'unread messages', 'inbox'.",
      "parameters": {
        "type": "object",
        "properties": {
          "maxResults": {
            "type": "number",
            "description": "Number of messages (default 10, max 50)",
            "default": 10
          },
          "unreadOnly": {
            "type": "boolean",
            "description": "Only list unread messages",
            "default": false
          },
          "labelIds": {
            "type": "array",
            "description": "Label IDs (e.g. INBOX, SENT, DRAFT). Default INBOX.",
            "items": { "type": "string" }
          }
        }
      }
    },
    {
      "name": "gmail_read_mail",
      "description": "Read a single Gmail message by ID. Use after gmail_list_mail to get full body.",
      "parameters": {
        "type": "object",
        "properties": {
          "messageId": {
            "type": "string",
            "description": "Message ID from gmail_list_mail"
          }
        },
        "required": ["messageId"]
      }
    },
    {
      "name": "gmail_send_mail",
      "description": "Send a Gmail email. Use for 'send email to X', 'email Y about Z'.",
      "parameters": {
        "type": "object",
        "properties": {
          "to": {
            "type": "string",
            "description": "Recipient email (comma-separated for multiple)"
          },
          "subject": {
            "type": "string",
            "description": "Email subject"
          },
          "body": {
            "type": "string",
            "description": "Email body (plain text)"
          }
        },
        "required": ["to", "subject", "body"]
      }
    },
    {
      "name": "gmail_search_mail",
      "description": "Search Gmail by query. Use for 'find email about X', 'search inbox for Y'.",
      "parameters": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Gmail search query (e.g. 'from:someone subject:meeting')"
          },
          "maxResults": {
            "type": "number",
            "description": "Max results (default 10)",
            "default": 10
          }
        },
        "required": ["query"]
      }
    },
    {
      "name": "calendar_list_events",
      "description": "List Google Calendar events. Use for 'what's on my calendar', 'today's meetings', 'events this week'.",
      "parameters": {
        "type": "object",
        "properties": {
          "timeMin": {
            "type": "string",
            "description": "Start time ISO (default: start of today)"
          },
          "timeMax": {
            "type": "string",
            "description": "End time ISO (default: 7 days from start)"
          },
          "maxResults": {
            "type": "number",
            "description": "Max events (default 20)",
            "default": 20
          },
          "calendarId": {
            "type": "string",
            "description": "Calendar ID (default primary)",
            "default": "primary"
          }
        }
      }
    },
    {
      "name": "calendar_create_event",
      "description": "Create a Google Calendar event. Use for 'schedule meeting', 'add event', 'create calendar event'.",
      "parameters": {
        "type": "object",
        "properties": {
          "summary": {
            "type": "string",
            "description": "Event title"
          },
          "start": {
            "type": "string",
            "description": "Start date/time ISO (e.g. 2024-01-15T14:00:00Z)"
          },
          "end": {
            "type": "string",
            "description": "End date/time ISO"
          },
          "description": {
            "type": "string",
            "description": "Event description"
          },
          "location": {
            "type": "string",
            "description": "Event location"
          },
          "attendees": {
            "type": "array",
            "description": "Attendee email addresses",
            "items": { "type": "string" }
          },
          "calendarId": {
            "type": "string",
            "description": "Calendar ID (default primary)",
            "default": "primary"
          }
        },
        "required": ["summary", "start", "end"]
      }
    }
  ]
}
