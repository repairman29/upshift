{
  "name": "upshift-cli",
  "version": "0.4.0",
  "description": "AI-powered dependency upgrades with explanations and safe rollbacks.",
  "type": "module",
  "bin": {
    "upshift": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/repairman29/upshift.git"
  },
  "homepage": "https://upshiftai.dev",
  "keywords": [
    "dependencies",
    "upgrade",
    "security",
    "vulnerabilities",
    "npm",
    "yarn",
    "pnpm",
    "cli",
    "ai"
  ],
  "author": "Jeff Adkins",
  "scripts": {
    "build": "tsup src/cli.ts src/server.ts --format esm --dts --clean",
    "dev": "node --loader ts-node/esm src/cli.ts",
    "start": "node dist/cli.js",
    "server": "node dist/server.js",
    "test": "echo \"No tests yet\"",
    "dogfood": "npm run build && node dist/cli.js scan",
    "dogfood:upgrade": "node dist/cli.js upgrade"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "chalk": "^5.3.0",
    "chalk-animation": "^2.0.3",
    "commander": "^14.0.3",
    "diff": "^8.0.3",
    "express": "^5.2.1",
    "glob": "^13.0.0",
    "inquirer": "^13.2.2",
    "openai": "^6.17.0",
    "ora": "^9.1.0",
    "resend": "^6.9.1",
    "semver": "^7.6.2",
    "stripe": "^20.3.0",
    "ts-morph": "^27.0.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "files": ["dist", "migrations"]
}
